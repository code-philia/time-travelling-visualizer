// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "Build Extension",
			"type": "npm",
			"script": "compile",
			"path": "extension",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
            "dependsOn": [
                "Build Front-end Pages for Extension",
                "Launch Backend"
            ]
		},
        {
            "label": "Start Web Page Dev",      // https://stackoverflow.com/questions/72213396/how-can-i-show-problems-detected-by-vite-checker-plugin-in-vs-code
            "type": "npm",
			"script": "dev",
			"path": "web",
			"problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "Typescript",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "sd",
                        "endsPattern": "Local:"
                    },
                    "pattern": [
                        {
                            "regexp": "(ERROR|WARNING)\\(TypeScript\\)  (.*)",
                            "severity": 1,
                            "message": 2
                        },
                        {
                            "regexp": "^ FILE  (.*):(\\d*):(\\d*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ]
                }
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Build Front-end Pages for Extension",
            "type": "npm",
            "script": "build",
            "path": "web",
            "problemMatcher": "$tsc-watch",
			"isBackground": true,
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Launch Backend",
            "type": "shell",
            "command": "python ${workspaceFolder}/tool/server/server.py",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "python",
                    "source": "Flask",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Serving Flask app",
                        "endsPattern": "Press CTRL\\+C to quit"
                    },
                    "pattern": [
                        {
                            "regexp": ".*Running on http://.*:5050",
                            "message": 1
                        },
                        {
                            "regexp": "Press CTRL\\+C to quit",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ]
                }
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"  // Keep the terminal shared
            }
        },
        {
            "label": "Terminate Backend",
            "type": "shell",
            "command": "pkill -f 'python ${workspaceFolder}/tool/server/server.py'",
            "problemMatcher": [],
            "isBackground": false,
            "presentation": {
                "reveal": "silent"
            }
        }
	]
}
